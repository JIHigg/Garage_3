@model MembershipViewModel

@{
    ViewData["Title"] = "RegisterMember";
}

<h1>Register New Membership!</h1>

<h4>New Membership</h4>
<hr />
<div class="row">

    
    
        <div class="col-md-4 col-sm-4">
            <form asp-action="RegisterMember">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                    <label asp-for="Personnummer" class="control-label"></label>
                    <input asp-for="Personnummer" class="form-control" />
                    <span asp-validation-for="Personnummer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="StayPro" value="true" id="IsPro" />
                        <label class="form-check-label" asp-for="StayPro">Add Pro Membership</label>
                        
                        <span asp-validation-for="StayPro" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PostNumber" class="control-label"></label>
                    <input asp-for="PostNumber" class="form-control" />
                    <span asp-validation-for="PostNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Register New Member" />
                </div>
            </form>
        </div>
    
    
</div>

<div>
    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Garage" asp-action="Index">Back to Garage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
