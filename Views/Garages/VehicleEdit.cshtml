@model Garage_3.Models.Entites.Vehicle

@{
    ViewData["Title"] = "VehicleEdit";
}

<h1>VehicleEdit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VehicleEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@ViewBag.BackTo" id="backTo" name="backTo"/>
                <input type="hidden" asp-for="VehicleId"/>

            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" readonly="@(true)" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfWheels" class="control-label"></label>
                <input asp-for="NumberOfWheels" class="form-control" />
                <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckInTime" class="control-label"></label>
                <input asp-for="CheckInTime" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.VehicleType.Type_Name" class="control-label"></label>
                <input asp-for="@Model.VehicleType.Type_Name" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewBag.BackTo != null && ViewBag.BackTo == "vehicleList")
    {
        <a asp-controller="Garages" asp-action="VehicleList" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Back to parked vehicles">Back to parked vehicles</a>
    }
    else if (ViewBag.BackTo != null && ViewBag.BackTo == "ShowGarage")
    {
        <a asp-action="ShowGarage" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Back to garage">Back to garage</a>
    }
    else
    {
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Home">Home</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
