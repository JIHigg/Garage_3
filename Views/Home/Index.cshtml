@model Garage_3.Models.ViewModel.HomeViewModel

@{
    ViewData["Title"] = Model.GarageName;
}

<div class="text-center">
    <h1 class="display-4">Welcome to @Model.GarageName</h1>
    <h4>Number of vehicles in the garage is @Model.NumberOfVehiclesInGarage</h4>
    <hr />
    <h4>Please enjoy your time in our garage, thank you! :</h4>
    <hr/>
</div>

@*New git init message*@

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Park Your Car With Us!</h5>
                <p class="card-text">We offer a secure, monitored location in Central Stockholm for your vehicle.</p>
                <a class="btn btn-secondary" asp-area="" asp-controller="Vehicles" asp-action="Garage" titel="Go to garage" data-toggle="tooltip" data-placement="top">Search For Your Vehicle</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Current Rate</h5>
                <p class="card-text font-weight-bold">180 <span class="text-muted">kr/hr</span></p>
                <br />
                <a class="btn btn-secondary" asp-area="" asp-controller="Vehicles" asp-action="Park" titel="Park vehicle" data-toggle="tooltip" data-placement="top">Park Your Vehicle</a>
            </div>
        </div>
        <hr/>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Membership</h5>
                <br />
                <a class="btn btn-secondary" asp-area="" asp-controller="Members" asp-action="Find" titel="Locate Member" data-toggle="tooltip" data-placement="top">Enter Your Personal Number</a>
            </div>
        </div>
     </div>
</div>